<% if @article.errors.any? %>
<ul>
    <!-- Show errors if not submit --> 
    <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @article do |f| %>
    <div class="form-group row">
        <div class="col-sm-2">
            <%= f.label :title %>
        </div>
        <div class="col-sm-8">
            <%= f.text_field :title, class: "form-control", placeholder: "Title of Article", autofocus: true %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <%= f.label :description %>
        </div>
        <div class="col-sm-8">
            <%= f.text_area :description, rows: 8, class: "form-control", placeholder: "Description of Article" %>
        </div>
    </div>
<% end %>


